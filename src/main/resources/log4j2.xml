<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="xcash-micro-service-logger">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}:%L - %msg%n" />
		</Console>
		
		<RollingFile name="ApplicationLogFile"
			fileName="/var/logs/xcash/xcash.log" filePattern="/var/logs/xcash/xcash.log.%d{yyyy-MM-dd}">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}:%L - %msg%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
			</Policies>
		</RollingFile>
	</Appenders>
	
	<Loggers>
		<Logger name="xcash" level="info" additivity="false">
			<AppenderRef ref="ApplicationLogFile" />
		</Logger>
		<Root level="info" additivity="false">
			<AppenderRef ref="ApplicationLogFile" />
		</Root>
	</Loggers>
</Configuration>